<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bk"
    tools:context="com.example.semu.firstproject1.MainActivity">

    <Button
        android:text="እርዳታ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/እርዳታ"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="28dp"
        tools:ignore="HardcodedText"
        android:textSize="20sp"
        android:background="@android:color/holo_blue_bright" />

    <Button
        android:text="መማሪያ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/መማሪያ"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,UnknownId"
        android:background="@android:color/holo_red_dark"
        android:textSize="25sp"
        android:padding="20sp"
        android:paddingBottom="20sp" />

    <TextView
        android:text="ጨዋታ ምረጡ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/holo_red_dark"
        android:textColorHighlight="@color/colorPrimary"
        android:textSize="25sp"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_above="@+id/የፊደል"
        android:layout_alignLeft="@+id/የፊደል"
        android:layout_alignStart="@+id/የፊደል" />

    <Button
        android:text="የፊደል"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/የፊደል"
        android:background="?attr/colorPrimary"
        tools:ignore="HardcodedText"
        android:padding="20sp"
        android:paddingBottom="20sp"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="የድምጽ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/የድምጽ"
        tools:ignore="HardcodedText"
        android:padding="20sp"
        android:paddingBottom="20sp"
        android:textSize="25sp"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/እርዳታ"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
